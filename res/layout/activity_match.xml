<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="15dip"
    android:paddingLeft="15dip"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#333"    
    tools:context="com.deco.football.MatchActivity" >
    
    <LinearLayout
        android:id="@+id/matchinfo"
        android:background="#FFF"
        android:layout_marginTop="20dip"
        android:paddingTop="15dip"
        android:paddingBottom="15dip"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="10dip"
	        android:layout_height="wrap_content"
	        android:layout_width="0dip"      
	        android:layout_weight="1"
	        android:orientation="vertical">
	        <ImageView
	            android:id="@+id/homeimg"
		        android:layout_width="match_parent"  
		        android:layout_height="130dip"  
				android:scaleType="centerInside" 
				android:src="@drawable/noimage"
				android:contentDescription="@string/versus"    
	            /> 
	        <TextView
	            android:id="@+id/homename"
		        android:layout_height="wrap_content"            
		        android:layout_width="match_parent"
		        android:gravity="center"
	            /> 	            
        </LinearLayout>
        <TextView
	        android:layout_height="match_parent"            
	        android:layout_width="40dip"
	        android:gravity="center"
	        android:text="@string/versus"
            /> 
        <LinearLayout
            android:paddingRight="10dip"
	        android:layout_height="wrap_content"
	        android:layout_width="0dip"      
	        android:layout_weight="1"
	        android:orientation="vertical">
	        <ImageView
	            android:id="@+id/awayimg"
		        android:layout_width="match_parent"  
		        android:layout_height="130dip"    
				android:scaleType="centerInside"
				android:src="@drawable/noimage"
				android:contentDescription="@string/versus"   
	            /> 
	        <TextView
	            android:id="@+id/awayname"
		        android:layout_height="wrap_content"            
		        android:layout_width="match_parent"
		        android:gravity="center"
	            /> 	            
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/matchdate"
            android:padding="10dip"
            android:paddingBottom="0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:background="@layout/match_layout_bg" />

        <TextView
            android:id="@+id/matchtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/typetab"
        android:layout_below="@id/matchinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:background="@layout/style_border_top_bot">
        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.4" 
            android:text="@string/match_result"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:clickable="true"
            android:onClick="onTabClick"
            android:textStyle="bold"  
            android:textColor="#fff"
            android:tag="0"          
            />
        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.4" 
            android:text="@string/correct_score"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:onClick="onTabClick"
            android:textColor="#aaa"
            android:tag="1"             
            />
        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.3" 
            android:text="@string/handicap"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:clickable="true"
            android:onClick="onTabClick"
            android:textColor="#aaa"
            android:tag="2"             
            />                
        </LinearLayout>
	
	
    <ScrollView
    	android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/typetab">    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:baselineAligned="false"
	        >
	        <LinearLayout
	            android:id="@+id/oddscolumn1"
		        android:layout_height="wrap_content"
		        android:layout_width="0dip"      
		        android:layout_weight="1"
		        android:orientation="vertical">
		    </LinearLayout>       
	        <LinearLayout
	            android:id="@+id/oddscolumn2"
		        android:layout_height="wrap_content"
		        android:layout_width="0dip"      
		        android:layout_weight="1"
		        android:orientation="vertical">
		    </LinearLayout>  
	        <LinearLayout
	            android:id="@+id/oddscolumn3"
		        android:layout_height="wrap_content"
		        android:layout_width="0dip"      
		        android:layout_weight="1"
		        android:orientation="vertical">
		    </LinearLayout>  	    	      
	    </LinearLayout>  
    </ScrollView>   
    
    <include 
        android:id="@+id/betpanel"
        android:visibility="invisible"
        layout="@layout/match_bet_panel" 
        />
    
</RelativeLayout>
